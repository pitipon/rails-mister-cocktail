<%= simple_form_for(@ingredient) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :cost %>
    <%= f.input :description %>
    <%= f.input :quantity %>
    <%= f.input :quantity_measurement %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
