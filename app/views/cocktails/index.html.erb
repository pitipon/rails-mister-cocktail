<p id="notice"><%= notice %></p>

<h1>Cocktails</h1>


<!-- app/views/pages/home.html.erb -->
<%= cl_image_tag("l4ma7alc8j9xa5hntpkq",
      width: 400, height: 300, crop: :fill) %>



<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Alcohol</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cocktails.each do |cocktail| %>
      <tr>
        <td><%= cocktail.name %></td>
        <td><%= cocktail.price %></td>
        <td><%= cocktail.description %></td>
        <td><%= cocktail.alcohol %></td>
        <td><%= link_to 'Show', cocktail %></td>
        <td><%= link_to 'Edit', edit_cocktail_path(cocktail) %></td>
        <td><%= link_to 'Destroy', cocktail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cocktail', new_cocktail_path %>
